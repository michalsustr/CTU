    @Action
    public void showAboutBox() {
        if (aboutBox == null) {
            JFrame mainFrame = BookReaderApp.getApplication().getMainFrame();
            aboutBox = new BookReaderAboutBox(mainFrame);
            aboutBox.setLocationRelativeTo(mainFrame);
        }
        BookReaderApp.getApplication().show(aboutBox);
    }

